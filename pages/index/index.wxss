/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20rpx;
  font-size: 32rpx;
  line-height: 1.6;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 600rpx;
}

.role-switcher {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.current-role {
  margin-top: 40rpx;
  font-size: 36rpx;
  color: #07c160;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.role-id {
  font-size: 28rpx;
  color: #666;
  font-family: monospace;
}

button {
  margin: 10rpx;
}
