/* user.wxss */
.scrollarea {
  height: 100%;
}

.container {
  padding: 20rpx;
  font-size: 32rpx;
  line-height: 1.6;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.user-info {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
  color: #333;
}

/* 退出登录按钮样式 */
.logout-btn {
  width: 80%;
  max-width: 400rpx;
  height: 80rpx;
  font-size: 32rpx;
  background-color: #ff4757;
  color: #fff;
  border-radius: 40rpx;
}

.logout-btn::after {
  border-radius: 40rpx;
}