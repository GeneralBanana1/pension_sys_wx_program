/* role-select.wxss */
.role-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.role-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
  color: #333;
}

.role-list {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.role-item {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  cursor: pointer;
  transition: all 0.3s ease;
}

.role-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.role-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.role-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 10rpx;
}

.role-id {
  font-size: 24rpx;
  color: #999;
  font-family: monospace;
}