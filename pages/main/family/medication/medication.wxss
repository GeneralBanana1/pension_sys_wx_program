/* medication.wxss */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0 30rpx 0;
  text-align: center;
}

.content-area {
  width: 92%;
  max-width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding-bottom: 120rpx;
  padding-top: 0;
  margin-top: 0;
  box-sizing: border-box;
  overflow-x: hidden;
}

.no-medications {
  width: 100%;
  height: 300rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-medications-text {
  font-size: 32rpx;
  color: #999;
}

/* 用药计划列表 */
.medication-plans-list {
  width: 100%;
}

/* 用药计划卡片 */
.medication-plan-card {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.18);
  padding: 30rpx;
  margin-bottom: 25rpx;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.medication-plan-card:active {
  transform: scale(0.99);
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.25);
}

/* 计划头部 */
.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.plan-status {
  font-size: 24rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  background-color: rgba(0, 0, 0, 0.05);
}

.plan-name {
  display: flex;
  align-items: center;
}

.drug-name {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-right: 10rpx;
}

.nick-name {
  font-size: 28rpx;
  color: #999;
}

/* 计划详情 */
.plan-details {
  margin-bottom: 25rpx;
}

.plan-details .detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 30rpx;
  color: #666;
}

.detail-label {
  font-weight: bold;
  margin-right: 10rpx;
  color: #999;
}

.detail-value {
  flex: 1;
  color: #333;
}

/* 用药记录区域 */
.records-section {
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

/* 无记录提示 */
.no-records {
  padding: 40rpx 0;
  text-align: center;
  background-color: #fafafa;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
}

.no-records-text {
  font-size: 28rpx;
  color: #999;
}

/* 记录列表 */
.records-list {
  background-color: #fafafa;
  border-radius: 10rpx;
  padding: 15rpx;
}

/* 记录项 */
.record-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.05);
}

.record-item:last-child {
  margin-bottom: 0;
}

.record-time {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.record-content {
  font-size: 28rpx;
}

.record-remark {
  display: block;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 40rpx;
}

.record-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.record-creator {
  margin-right: 20rpx;
}

.record-create-time {
  flex: 1;
  text-align: right;
}

/* 记录操作按钮样式 */
.record-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 15rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  margin-left: 15rpx;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  border-radius: 15rpx;
  border: none;
  min-width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-record-btn {
  background-color: #007aff;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
}

.edit-record-btn:active {
  background-color: #0056b3;
  box-shadow: 0 1rpx 4rpx rgba(0, 122, 255, 0.2);
}

.delete-record-btn {
  background-color: #ff4757;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
}

.delete-record-btn:active {
  background-color: #c41c2c;
  box-shadow: 0 1rpx 4rpx rgba(255, 71, 87, 0.2);
}

/* 加载更多样式 */
.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  margin-top: 10rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 没有更多数据样式 */
.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  margin-top: 10rpx;
}

.no-more-text {
  font-size: 28rpx;
  color: #999;
}

/* 底部返回按钮 */
.back-button-container {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  display: flex;
  justify-content: center;
}

.back-button {
  width: 100%;
  height: 100rpx;
  background-color: #f06292;
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 15rpx rgba(240, 98, 146, 0.4);
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(240, 98, 146, 0.3);
}

/* 添加按钮 */
.add-button-container {
  text-align: center;
  margin-bottom: 20rpx;
}

.add-button {
  background-color: #07c160;
  color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  font-size: 32rpx;
  width: 80%;
}

.add-button:active {
  background-color: #06ad56;
}

/* 操作按钮 - 计划卡片 */
.plan-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-button {
  margin-left: 20rpx;
  padding: 14rpx 28rpx;
  font-size: 30rpx;
  border-radius: 20rpx;
  border: none;
  min-width: 120rpx;
  font-weight: bold;
}

.edit-button {
  background-color: #52c41a;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.3);
}

.edit-button:active {
  background-color: #389e0d;
  box-shadow: 0 1rpx 4rpx rgba(82, 196, 26, 0.2);
}

.delete-button {
  background-color: #fa8c16;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(250, 140, 22, 0.3);
}

.delete-button:active {
  background-color: #d46b08;
  box-shadow: 0 1rpx 4rpx rgba(250, 140, 22, 0.2);
}

/* 弹窗样式 */
.modal-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.modal-content {
  position: relative;
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding-right: 10rpx;
  -webkit-overflow-scrolling: touch
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-button {
  background: none;
  border: none;
  font-size: 40rpx;
  color: #999;
  padding: 0;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.close-button:active {
  background-color: #f5f5f5;
  border-radius: 50%;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.form-input {
  width: 100%;
  padding: 25rpx 20rpx;
  font-size: 30rpx;
  height: 90rpx;
  border: 1rpx solid #ddd;
  border-radius: 15rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.form-textarea {
  width: 100%;
  padding: 25rpx 20rpx;
  font-size: 30rpx;
  border: 1rpx solid #ddd;
  border-radius: 15rpx;
  box-sizing: border-box;
  min-height: 150rpx;
  line-height: 1.6;
  background-color: #fff;
}

.form-input::placeholder,
.form-textarea::placeholder {
  font-size: 28rpx;
  color: #999;
  opacity: 0.8;
}

.form-picker {
  width: 100%;
  padding: 25rpx 20rpx;
  font-size: 30rpx;
  height: 90rpx;
  border: 1rpx solid #ddd;
  border-radius: 15rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 弹窗底部按钮 */
.modal-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.footer-button {
  margin-left: 20rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  border-radius: 20rpx;
  border: none;
  min-width: 120rpx;
}

.cancel-button {
  background-color: #f5f5f5;
  color: #666;
}

.cancel-button:active {
  background-color: #e0e0e0;
}

.submit-button {
  background-color: #07c160;
  color: #fff;
}

.submit-button:active {
  background-color: #06ad56;
}

/* 新增用药记录按钮样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
  user-select: none;
}

.section-title-wrapper {
  display: flex;
  align-items: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
  margin-right: 10rpx;
}

.expand-icon {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
  transition: transform 0.3s ease;
}

.add-record-button {
  background-color: #576b95;
  color: #fff;
  border: none;
  border-radius: 15rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.add-record-button:active {
  background-color: #4a5c81;
  transform: scale(0.98);
}

.add-record-button::before {
  content: "";
  border: none;
}

/* 日期和时间选择器间隔 */
.date-picker-section {
  margin-bottom: 20rpx;
}

.time-picker-section {
  margin-top: 20rpx;
}