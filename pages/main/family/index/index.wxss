/* 全局样式重置 */
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

/* 主容器 */
.family-home-container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 老人卡片样式 */
.old-man-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.card-header {
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.card-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 20rpx;
}

/* 选择器样式 */
.picker-box {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  padding: 20rpx 25rpx;
  min-width: 300rpx;
}

.picker-value {
  font-size: 32rpx;
  color: #333333;
  margin-right: 10rpx;
}

.picker-relation {
  font-size: 26rpx;
  color: #999999;
  margin-right: 10rpx;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999999;
  margin-left: 10rpx;
}

/* 绑定按钮样式 */
.bind-button {
  background-color: #07c160;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.bind-button:active {
  background-color: #06ad56;
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(7, 193, 96, 0.3);
}

/* 菜单容器 */
.menu-container {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
}

/* 菜单网格 */
.menu-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 菜单项样式 */
.menu-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f8f8;
  padding-left: 10rpx;
}

/* 菜单图标 */
.item-icon {
  font-size: 60rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f0fdf4;
  border-radius: 16rpx;
  margin-right: 25rpx;
}

/* 菜单文本区域 */
.item-text {
  flex: 1;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #999999;
  display: block;
}

/* 菜单箭头 */
.item-arrow {
  font-size: 32rpx;
  color: #cccccc;
  font-weight: bold;
}

/* 弹窗遮罩层 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 弹窗样式 */
.bind-modal {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  width: 90%;
  max-width: 600rpx;
  overflow: hidden;
  position: relative; /* 添加position属性，使z-index生效 */
  z-index: 1000;
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  font-size: 48rpx;
  color: #999999;
  line-height: 1;
  cursor: pointer;
  transition: color 0.3s ease;
}

.modal-close:active {
  color: #666666;
}

/* 弹窗主体 */
.modal-body {
  padding: 30rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

/* 表单标签 */
.form-label {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 15rpx;
}

/* 表单输入框 */
.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.form-input:focus {
  outline: none;
  border-color: #07c160;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 20rpx 30rpx 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

/* 弹窗按钮 */
.modal-btn {
  padding: 20rpx 40rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

/* 取消按钮 */
.cancel-btn {
  background-color: #f5f5f5;
  color: #666666;
}

.cancel-btn:active {
  background-color: #e8e8e8;
  transform: scale(0.98);
}

/* 确认按钮 */
.confirm-btn {
  background-color: #07c160;
  color: #ffffff;
}

.confirm-btn:active {
  background-color: #06ad56;
  transform: scale(0.98);
}

/* 搜索相关样式 */
.search-box {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.search-input:focus {
  outline: none;
  border-color: #07c160;
}

.search-loading {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #999999;
}

.search-results {
  background-color: #ffffff;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  max-height: 300rpx;
  overflow-y: auto;
  margin-top: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.search-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.search-item:last-child {
  border-bottom: none;
}

.search-item:active {
  background-color: #f8f8f8;
}

.search-item-id {
  font-size: 28rpx;
  color: #666666;
  margin-right: 15rpx;
}

.search-item-name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.no-results {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  padding: 30rpx 0;
  background-color: #ffffff;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  margin-top: 10rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .card-content {
    flex-direction: column;
    align-items: stretch;
  }
  
  .picker-box {
    min-width: auto;
  }
  
  .bind-button {
    width: 100%;
  }
  
  .modal-footer {
    flex-direction: column;
  }
  
  .modal-btn {
    width: 100%;
  }
}