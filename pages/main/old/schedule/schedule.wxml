<!-- schedule.wxml -->
<view class="container">
  <!-- 页面标题 -->
  <view class="page-title">今日安排</view>
  
  <!-- 内容区域 -->
  <view class="content-area">
    <view class="date-info">
      <text class="date-text">{{currentDate}}</text>
    </view>
    
    <view class="schedule-list">
      <view wx:if="{{todaySchedule.length === 0}}" class="no-schedule">
        <text class="no-schedule-text">今日暂无安排</text>
      </view>
      <view wx:else class="schedule-items">
        <view wx:for="{{todaySchedule}}" wx:key="index" class="schedule-item">
          <view class="schedule-time">
            <text class="time-text">{{item.time}}</text>
          </view>
          <view class="schedule-content">
            <text class="service-name">{{item.service}}</text>
            <text class="nurse-name">服务人员：{{item.nurse}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
  
  <!-- 底部返回按钮 -->
  <view class="back-button-container">
    <button class="back-button" bindtap="navigateBack">返回首页</button>
  </view>
</view>