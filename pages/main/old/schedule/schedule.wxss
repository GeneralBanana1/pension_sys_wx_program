/* schedule.wxss */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0 30rpx 0;
  text-align: center;
}

.content-area {
  width: 92%;
  max-width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding-bottom: 120rpx;
  padding-top: 0;
  margin-top: 0;
  box-sizing: border-box;
  overflow-x: hidden;
}

.date-info {
  width: 100%;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
  text-align: center;
}

.date-text {
  font-size: 34rpx;
  color: #666;
  font-weight: 500;
}

.schedule-list {
  width: 100%;
  flex: 1;
}

.no-schedule {
  width: 100%;
  height: 300rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-schedule-text {
  font-size: 32rpx;
  color: #999;
}

.schedule-items {
  width: 100%;
}

.schedule-item {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  padding: 30rpx;
  margin-bottom: 25rpx;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.schedule-item:active {
  transform: scale(0.99);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.15);
}

.schedule-time {
  width: 120rpx;
  background-color: #4caf50;
  color: white;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 25rpx;
  flex-shrink: 0;
}

.time-text {
  font-size: 28rpx;
  font-weight: bold;
}

.schedule-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.service-name {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.nurse-name {
  font-size: 28rpx;
  color: #666;
}

.back-button-container {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  display: flex;
  justify-content: center;
}

.back-button {
  width: 100%;
  height: 100rpx;
  background-color: #4caf50;
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 15rpx rgba(76, 175, 80, 0.4);
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(76, 175, 80, 0.3);
}