/* calendar.wxss */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0 30rpx 0;
  text-align: center;
}

.content-area {
  width: 92%;
  max-width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding-bottom: 120rpx;
  padding-top: 0;
  margin-top: 0;
  box-sizing: border-box;
  overflow-x: hidden;
}

.calendar-container {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
  box-sizing: border-box;
}

.calendar-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
}

.calendar-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
}

.calendar-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  padding: 0 20rpx;
}

.calendar-btn {
  padding: 30rpx 60rpx;
  background-color: #4db6ac;
  color: white;
  border-radius: 20rpx;
  font-size: 44rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(77, 182, 172, 0.4);
  width: 45%;
  text-align: center;
}

.prev-btn {
  margin-right: 10rpx;
}

.next-btn {
  margin-left: 10rpx;
}

.calendar-btn:active {
  transform: scale(0.95);
}

.calendar-body {
  width: 100%;
  overflow: hidden;
}

.calendar-weekday {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.weekday-item {
  width: calc(100% / 7);
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #666;
  padding: 15rpx 0;
}

.calendar-days {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 10rpx;
}

.day-item {
  width: calc(100% / 7);
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #333;
  margin-bottom: 15rpx;
  border-radius: 5rpx;
  transition: all 0.3s ease;
}

.day-item:active {
  background-color: #e0f2f1;
}

.current-day {
  background-color: #4db6ac;
  color: white;
  font-weight: bold;
  font-size: 40rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 10rpx rgba(77, 182, 172, 0.5);
}

.back-button-container {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  display: flex;
  justify-content: center;
}

.back-button {
  width: 100%;
  height: 100rpx;
  background-color: #4db6ac;
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 15rpx rgba(77, 182, 172, 0.4);
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(77, 182, 172, 0.3);
}