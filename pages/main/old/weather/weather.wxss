/* weather.wxss */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

.page-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0 30rpx 0;
  text-align: center;
}

.content-area {
  width: 92%;
  max-width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding-bottom: 120rpx;
  padding-top: 0;
  margin-top: 0;
  box-sizing: border-box;
  overflow-x: hidden;
}

.loading-container {
  width: 100%;
  height: 300rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-text {
  font-size: 38rpx;
  color: #666;
}

.weather-container {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  padding: 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.location-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 38rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.location-text {
  font-size: 36rpx;
  color: #999;
  display: block;
}

.current-weather {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx;
  background-color: #f0f0f0;
  border-radius: 20rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.temp-container {
  display: flex;
  justify-content: center;
  align-items: baseline;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.weather-temp {
  font-size: 100rpx;
  color: #ff9800;
  font-weight: bold;
  margin-right: 10rpx;
}

.weather-unit {
  font-size: 60rpx;
  color: #ff9800;
  font-weight: bold;
  vertical-align: baseline;
}

.weather-condition {
  font-size: 44rpx;
  color: #333;
  display: block;
}

.weather-details {
  margin-bottom: 40rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 20rpx;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}

.detail-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.detail-label {
  width: 120rpx;
  font-size: 36rpx;
  color: #666;
  flex-shrink: 0;
}

.detail-value {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}



.back-button-container {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  display: flex;
  justify-content: center;
}

.back-button {
  width: 100%;
  height: 100rpx;
  background-color: #ff9800;
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 44rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 15rpx rgba(255, 152, 0, 0.4);
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(255, 152, 0, 0.3);
}