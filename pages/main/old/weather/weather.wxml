<!-- weather.wxml -->
<view class="container">
  <!-- 页面标题 -->
  <view class="page-title">天气信息</view>
  
  <!-- 内容区域 -->
  <view class="content-area">
    <view wx:if="{{loading}}" class="loading-container">
      <text class="loading-text">正在获取天气数据...</text>
    </view>
    
    <view wx:else class="weather-container">
      
      
      <!-- 位置信息 -->
      <view class="location-section">
        <text class="section-title">当前位置</text>
        <text class="location-text">{{locationName || '获取位置中...'}}</text>
      </view>
      
      <!-- 当前天气 -->
      <view class="current-weather">
        <view class="temp-container">
          <text class="weather-temp">{{weatherData.temp || '--'}}</text>
          <text class="weather-unit">°C</text>
        </view>
        <text class="weather-condition">{{weatherData.text || '未知'}}</text>
      </view>
      
      <!-- 天气详情 -->
      <view class="weather-details">
        <view class="detail-item">
          <text class="detail-label">风向：</text>
          <text class="detail-value">{{weatherData.windDir || '--'}}</text>
        </view>
        <view class="detail-item">
          <text class="detail-label">风力：</text>
          <text class="detail-value">{{weatherData.windScale || '--'}}</text>
        </view>
        <view class="detail-item">
          <text class="detail-label">湿度：</text>
          <text class="detail-value">{{weatherData.humidity || '--'}}%</text>
        </view>
        <view class="detail-item">
          <text class="detail-label">气压：</text>
          <text class="detail-value">{{weatherData.pressure || '--'}}hPa</text>
        </view>
      </view>
    </view>
  </view>
  
  <!-- 底部返回按钮 -->
  <view class="back-button-container">
    <button class="back-button" bindtap="navigateBack">返回首页</button>
  </view>
</view>