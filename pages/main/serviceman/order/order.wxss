/* 基础样式 */
page {
  background-color: #f5f5f5;
  font-size: 32rpx;
  line-height: 1.5;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Arial, sans-serif;
}

/* 容器 */
.container {
  padding: 20rpx;
}

/* 订单滚动区域 */
.order-scroll {
  height: calc(100vh - 100rpx);
}

/* 订单列表 */
.order-list {
  padding: 0 10rpx;
}

/* 空状态 */
.empty-box {
  text-align: center;
  padding: 100rpx 0;
}

.empty-title {
  font-size: 36rpx;
  color: #999999;
  display: block;
  margin-bottom: 20rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #CCCCCC;
  display: block;
}

/* 订单卡片 */
.order-card {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.header-left {
  flex: 1;
}

.order-type {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 15rpx;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  display: inline-block;
}

.status-0 {
  background-color: #FFF3E0;
  color: #FF9500;
}

.status-1 {
  background-color: #E3F2FD;
  color: #007AFF;
}

.status-2 {
  background-color: #E8F5E9;
  color: #34C759;
}

.status-3 {
  background-color: #F5F5F5;
  color: #999999;
}

.status-4 {
  background-color: #FFEBEE;
  color: #FF3B30;
}

.order-time {
  font-size: 28rpx;
  color: #999999;
}

/* 卡片内容 */
.card-content {
  margin-bottom: 25rpx;
}

/* 老人信息 */
.customer-info {
  margin-bottom: 20rpx;
}

.customer-info .info-label {
  font-weight: bold;
  color: #07C160;
}

.customer-info .info-value {
  font-weight: bold;
  color: #333333;
}

.content-label {
  font-size: 28rpx;
  color: #666666;
  display: block;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.content-text {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
  word-break: break-all;
}

.order-info {
  margin-bottom: 15rpx;
}

.info-label {
  font-size: 28rpx;
  color: #999999;
}

.info-value {
  font-size: 28rpx;
  color: #666666;
}

/* 地址信息 */
.address {
  display: block;
  margin-top: 5rpx;
  margin-left: 120rpx;
  word-break: break-all;
}

/* 操作按钮 */
.card-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin: 0;
  padding: 0;
  border: none;
  outline: none;
}

.action-btn::after {
  border: none;
}

/* 接单按钮 - 绿色 */
.btn-accept {
  background-color: #07C160 !important;
  color: #FFFFFF !important;
}

/* 开始服务按钮 - 蓝色 */
.btn-start {
  background-color: #007AFF !important;
  color: #FFFFFF !important;
}

/* 完成服务按钮 - 绿色 */
.btn-complete {
  background-color: #07C160 !important;
  color: #FFFFFF !important;
}

/* 联系老人按钮 - 灰色 */
.btn-contact {
  background-color: #999999 !important;
  color: #FFFFFF !important;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 30rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
}

.no-more-text {
  font-size: 28rpx;
  color: #CCCCCC;
}

/* 适配大字体模式 */
@media (prefers-font-size: large) {
  page {
    font-size: 36rpx;
  }
  
  .order-type {
    font-size: 40rpx;
  }
  
  .content-text {
    font-size: 36rpx;
  }
  
  .action-btn {
    height: 90rpx;
    line-height: 90rpx;
    font-size: 36rpx;
  }
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}